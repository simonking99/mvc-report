{% extends "base.html.twig" %}

{% block title %}Api{% endblock %}

{% block body %}

<h1>Api</h1>
<hr>
<div class="buttons">
<form method="get" action="">
  <p>Click the button for a random quote</p>
  <input type="submit" name="quote" value="GET api/quote"
  onClick="this.form.action='{{ path('json_quote') }}';"
  >
  <hr>

  <p>Click on button to get a sorted deck</p>
  <input type="submit" name="sorted" value="GET api/deck"
  onClick="this.form.action='{{ path('api_deck_sorted') }}';"
  >
  <hr>
</form>

<form method="post" action="">
  <p>Click on button to shuffle deck and restore amount of cards</p>
  <input type="submit" name="shuffle" value="POST api/deck/shuffle"
  onClick="this.form.action='{{ path('api_deck_shuffled') }}';"
  >
  <hr>

  <p>Click on button to draw a card from the deck</p>
  <input type="submit" name="draw" value="POST api/deck/draw"
  onClick="this.form.action='{{ path('api_card_draw') }}';"
  >
  <hr>

  <p>Click on button to draw multiple cards from deck</p>
  <input type="submit" name="draw_many_cards" value="POST api/deck/draw/:number"
  onClick="this.form.action='{{ path('api_card_draw_many', {number: 5}) }}';"
  >
  <hr>
</form>
</div>


{% endblock %}
